@model IEnumerable<Category>

@{
    ViewData["Title"] = "List";
}
@section Css
{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">
}

@section Scripts
{
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready( function () {
            $('#myTable').DataTable();
        });
    </script>

}
<div class="container mt-3">
    <h2>Category List</h2>
    <br />
    <a asp-action="Create" asp-controller="Category" class="btn btn-primary mb-3">Create</a>
    <div class="row">
        <div class="col">
            @if (Model.Count() > 0)
            {
            <table data-page-length='3' id="myTable" class="table table-bordered mt-3">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryId</td>
                            <td>@item.Name</td>
                            <td>
                                <a class="btn btn-primary btn-sm" asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryId">
                                    Details
                                </a>
                                <a class="btn btn-danger btn-sm" asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryId">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            }
            else
            {
                <div class="alert alert-danger">
                    Kategory Eklenmemiş.
                </div>
            }
        </div>
    </div>
</div>
