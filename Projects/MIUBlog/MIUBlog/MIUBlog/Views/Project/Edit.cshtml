@model Project

@section scripts{

    <script src="~/modules/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("Body")
    </script>
}



<div class="container">
    <div class="bg-primary text-white p-1 m-1 text-center">
        <h2>Update Project </h2>
    </div>
    <div class="bg-danger" asp-validation-summary="All"></div>
    <form asp-controller="Project" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Image" />
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Body"></label>
            <textarea asp-for="Body" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <img src="~/img/@Model.Image" width="120" />
            <input type="file" name="file" id="file" class="form-control">
        </div>
        <div class="form-group">
            <div class="form-check">
                <label asp-for="isApproved" class="form-check-label">
                    <input asp-for="isApproved" class="form-check-input">
                    is Approved
                </label>
            </div>
        </div>
        <div class="form-group">
            <div class="form-check">
                <label asp-for="Closing" class="form-check-label">
                    <input asp-for="Closing" class="form-check-input">
                    Closing
                </label>
            </div>
        </div>



        <input type="hidden" value="@Model.Date" asp-for="Date" />
        <div class="form-group">
            <label asp-for="CategoryId">Category Name</label>
            <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.Categories">
                <option disabled selected value="">Select Category</option>
            </select>
        </div>

        <input type="hidden" asp-for="@Model.ApplicationUserId" />

        <button type="submit" class="btn btn-primary">Submit</button>
        <a class="btn btn-secondary" asp-controller="Blog" asp-action="List">Cancel</a>
    </form>

</div>